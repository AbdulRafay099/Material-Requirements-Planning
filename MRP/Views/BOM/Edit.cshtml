@model MRP.Models.BOM;

@{
    ViewData["Title"] = "Edit Material";
}
<form method="post">
    <input asp-for="MaterialId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">
                Edit Product
            </h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MaterialName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MaterialName" class="form-control" />
                        <span asp-validation-for="MaterialName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MaterialPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MaterialPrice" class="form-control" />
                        <span asp-validation-for="MaterialPrice" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MaterialQty"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MaterialQty" class="form-control" />
                        <span asp-validation-for="MaterialQty" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>

                        <div class="col">
                            <a asp-action="Admin" class="btn btn-success w-100">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


