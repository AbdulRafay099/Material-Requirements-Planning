@model IEnumerable<MRP.Models.Inventory>

@{
    ViewData["Title"] = "Inventory List";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Inventory List</h2>
        </div>

        <div class="col-6" style="text-align:right;">
            <a asp-controller="User" asp-action="Profile" class="btn btn-dark">
                Profile
            </a>
            <a asp-controller="Inventory" asp-action="Create" class="btn btn-dark">
                Add Item
            </a>
        </div>

    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Picture
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Quantity
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.ItemName</td>
                        @if (obj.ItemImage == null)
                        {
                            <td width="50%">
                                @using (Html.BeginForm("Admin", "Inventory", new { Id = obj.ItemId }, FormMethod.Post, true, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="file" name="ImageData" id="ImageData" />
                                    <br />
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Upload" class="btn btn-success" />
                                    </div>
                                }
                            </td>
                        }
                        else
                        {
                            <td width="50%"><img src="/Inventory/GetImage/@obj.ItemId" alt="" style="height:100px;width:100px;" /></td>
                        }
                        <td width="30%">@obj.ItemPrice</td>
                        <td width="30%">@obj.ItemQty</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Inventory" asp-route-Id="@obj.ItemId" asp-action="Edit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Inventory" asp-route-Id="@obj.ItemId" asp-action="Delete" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Item Exists.</p>
    }
</div>


