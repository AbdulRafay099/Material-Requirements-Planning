@model MRP.Models.User

@{
    ViewData["Title"] = "Login";
}

<form method="post" asp-action="Login">
    <div class="border p-5">

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="p-3 mb-3 bg-danger text-white">@ViewBag.ErrorMessage</div>
        }

        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div class="form-group row">
            <h2 class="text-info pl-5">
                Sign In To Your Account
            </h2>
            <div class="col-6" style="text-align:right;">
                <a asp-controller="User" asp-action="Register" class="btn btn-dark">
                    Create New Account
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row pl-5 pt-5">
                    <div class="col-4">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pl-5 pt-2">
                    <div class="col-4">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-8">
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pl-5 pt-5">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Login" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

